<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".faq.ui.Leave"
    android:gravity="center"
    android:layout_above="@id/bottomNav">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottomNav">
    <!--android:padding="10dp"-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:text="Leave Days"
                android:paddingLeft="70dp"
                android:textColor="@color/colorBitterSweet"
                android:textStyle="bold"
                android:background="@drawable/leave1"
                android:paddingTop="40dp"
                android:textSize="40dp"/>
        
        <ProgressBar
            style="?android:attr/progressBarStyle"
            android:id="@+id/progressBarLeave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminateDrawable="@drawable/cpbleavedays"
            android:gravity="center"
           />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="16dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="30dp">


                <TextView
                    android:id="@+id/text_view_Leave"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/safgreen"
                    android:progress="80">

                </TextView>


            </LinearLayout>

    </LinearLayout>
    </ScrollView>




    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:menu="@menu/bottom_navigation"
        android:background="?android:attr/windowBackground">
        <!--app:itemTextColor="@color/white"-->
        <!--android:background="@color/safgreen"-->
    </com.google.android.material.bottomnavigation.BottomNavigationView>

</RelativeLayout>