<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="MyCardViewStyle" parent="Theme.AppCompat.Light">
        <item name="cardCornerRadius">30dp</item>
        <item name="cardElevation">10dp</item>
    </style>

    <style name="MySwipeCardStyle" parent="Theme.AppCompat.Light">
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">10dp</item>
    </style>

    <style name="FaqTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/safgreen</item>
    </style>

    <style name="LeaveTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/safgreen</item>
    </style>

    <style name="ProductsTheme" parent="Theme.AppCompat.Light.NoActionBar"></style>

    <style name="NoActionBarTheme" parent="Theme.AppCompat.Light.NoActionBar">

    </style>

    <style name="NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
